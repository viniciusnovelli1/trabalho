#include <stdio.h>
#include <stdlib.h>
#include "trabalho.h"

int main(){
  
  int opcao, index = 0, erro;
  char produto[50], nome[50];
  float valor;
  Lista L;
  Pilha P;
  Fila F;

  CriaPilha(&P);
  CriaLista(&L);
  CriaFila(&F);
  do{
    //começa o TAD dinâmico
    //system("clear");
    printf("+----------------------------------------+\n| Cod | Opcao                            |\n+----------------------------------------+\n|  1  | Cadastrar produto                |\n|  2  | Listar produtos e lances         |\n|  3  | Dar um lance                     |\n|  4  | Listar outros produtos p/ lances |\n|  5  | Encerrar leilao                  |\n+----------------------------------------+\n");
    scanf("%d", &opcao);
    
    if(opcao < 1 || opcao > 5){
      system("clear");
      index = 0;
    }
    if(opcao == 1){
      printf("Entre com o nome do produto: ");
      scanf(" %s", produto);
      EntraLista(&L,produto,&erro);
      if(erro == 1){
	printf("Erro no cadastro.\n");
      } else if(erro == 2){
	printf("Produto ja cadastrado.\n");
      } else if(erro == 0){
	printf("Produto cadastrado.\n");
      }
    }
    if(opcao == 2){
      PrintLista(&L);
    }
    if(opcao == 3){
      printf("Entre com seu nome: ");
      scanf(" %s", nome);
      printf("Entre com o nome do produto: ");
      scanf(" %s", produto);
      printf("Entre com o valor do lance: ");
      scanf("%f", &valor);
      CadastrarLance(&L,nome,produto,&valor,&erro);
      if(erro == 2){
	printf("Produto nao encontrado.\n");
      }
      if(erro == 1){
	printf("Falha no cadastro.\n");
      }
      if(erro == 0){
	printf("Lance cadastrado.\n");
      }
    }
    if(opcao == 4){
    }
    if(opcao == 5){
    }
  }while(index==0);
  
  return 0;
}
